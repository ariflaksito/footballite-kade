<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.ariflaksito.footballlite">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:roundIcon="@drawable/icon"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".detailmatch.DetailMatchActivity"
                android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
                android:name=".detailteam.TeamActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/title_activity_team"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".detailplayer.PlayerActivity">
        </activity>
    </application>

</manifest>