<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/padding_card">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <TextView
                    android:paddingHorizontal="@dimen/padding_list"
                    android:textColor="@color/colorAccent"
                    tools:text="Sat, 18 Nov 2018"
                    android:id="@+id/date_match"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:id="@+id/event_id"
                        android:orientation="vertical"
                        android:layout_weight="0.85"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:paddingHorizontal="@dimen/padding_list"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/home_team"
                                android:textSize="@dimen/font_team"
                                tools:text="Arsenal"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                android:gravity="end"
                                android:textSize="@dimen/font_team"
                                tools:text="2"
                                android:textColor="@color/colorPrimary"
                                android:id="@+id/home_score"/>

                    </LinearLayout>

                    <LinearLayout
                            android:paddingHorizontal="@dimen/padding_list"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/padding_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/away_team"
                                android:textSize="@dimen/font_team"
                                tools:text="Chelsea"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                android:gravity="end"
                                android:textSize="@dimen/font_team"
                                tools:text="0"
                                android:textColor="@color/colorPrimary"
                                android:id="@+id/away_score"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                        android:id="@+id/img_alarm"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:src="@drawable/baseline_alarm_on_black_18dp"
                        android:layout_width="0dip"
                        android:layout_height="@dimen/font_team_big"/>


            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_weight="1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.v7.widget.LinearLayoutCompat>