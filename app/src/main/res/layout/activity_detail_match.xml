<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout"
        android:padding="@dimen/padding_list"
        tools:context=".detailmatch.DetailMatchActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


        <TextView
                android:id="@+id/match_info"
                tools:text="English Premier League 2018-11-10 Southampton vs Watford"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/padding_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_weight=".30"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/home_team"
                        tools:text="Arsenal"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textAlignment="center"
                        android:textSize="@dimen/font_team_big"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/imgHome"
                        android:layout_width="@dimen/img_size"
                        android:layout_height="@dimen/img_size"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/home_score"
                    tools:text="2"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_team_big"
                    android:textColor="@color/colorAccent"
                    android:layout_weight=".15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_team_big"
                    android:layout_weight=".10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/away_score"
                    tools:text="0"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_team_big"
                    android:textColor="@color/colorAccent"
                    android:layout_weight=".15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_weight=".30"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/away_team"
                        tools:text="Chelsea"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="@dimen/font_team_big"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/imgAway"
                        android:layout_width="@dimen/img_size"
                        android:layout_height="@dimen/img_size"/>

            </LinearLayout>

        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

        <TextView
                android:text="Manager"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_list"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/home_manager"
                    android:layout_weight="0.5"
                    tools:text="Unay Emery"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/away_manager"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:layout_weight="0.5"
                    tools:text="Jose Mourinho"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

        <TextView
                android:text="Goal"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/home_goal"
                    android:layout_weight="0.5"
                    tools:text="Unay Emery"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/away_goal"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:layout_weight="0.5"
                    tools:text="Jose Mourinho"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

        <TextView
                android:text="Yellow Card"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/home_yellowc"
                    android:layout_weight="0.5"
                    tools:text="Unay Emery"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/away_yellowc"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:layout_weight="0.5"
                    tools:text="Jose Mourinho"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

        <TextView
                android:text="Red Card"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/home_redc"
                    android:layout_weight="0.5"
                    tools:text="Unay Emery"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/away_redc"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:layout_weight="0.5"
                    tools:text="Jose Mourinho"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

    </LinearLayout>

</ScrollView>